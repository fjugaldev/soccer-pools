<doctrine-mapping>
    <entity name="App\Shared\Infrastructure\Entity\PoolTicket">
        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="updateTimestamps" />
            <lifecycle-callback type="preUpdate" method="updateTimestamps" />
        </lifecycle-callbacks>
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <many-to-one field="pool" target-entity="App\Shared\Infrastructure\Entity\TournamentPool" inversed-by="poolTickets">
            <join-column name="pool_id" referenced-column-name="id" />
        </many-to-one>
        <many-to-one field="match" target-entity="App\Shared\Infrastructure\Entity\Match">
            <join-column name="match_id" referenced-column-name="id" />
        </many-to-one>
        <field name="visitorScore" type="integer" />
        <field name="homeScore" type="integer" />
        <many-to-one field="player" target-entity="App\Shared\Infrastructure\Entity\User">
            <join-column name="player_id" referenced-column-name="id" />
        </many-to-one>
        <field name="createdAt" type="datetime" />
        <field name="updatedAt" type="datetime" />
    </entity>
</doctrine-mapping>