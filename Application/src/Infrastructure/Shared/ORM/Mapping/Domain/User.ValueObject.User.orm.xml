<doctrine-mapping>
    <entity name="App\Domain\User\ValueObject\User" table="user" inheritance-type="SINGLE_TABLE">
        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="updateTimestamps" />
            <lifecycle-callback type="preUpdate" method="updateTimestamps" />
        </lifecycle-callbacks>
        <discriminator-column name="discr" type="string" />
        <discriminator-map>
            <discriminator-mapping value="user" class="App\Domain\User\ValueObject\User" />
            <discriminator-mapping value="player" class="App\Domain\Player\ValueObject\Player" />
            <discriminator-mapping value="admin" class="App\Domain\Admin\ValueObject\Admin" />
        </discriminator-map>
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="firstName" type="string" length="100" />
        <field name="lastName" type="string" length="100" />
        <one-to-many field="owningPools" target-entity="App\Domain\TournamentPool\ValueObject\TournamentPool" mapped-by="owner" />
        <many-to-many field="playingPools" target-entity="App\Domain\TournamentPool\ValueObject\TournamentPool" mapped-by="players" />
        <field name="createdAt" type="datetime" />
        <field name="updatedAt" type="datetime" />
    </entity>
</doctrine-mapping>
