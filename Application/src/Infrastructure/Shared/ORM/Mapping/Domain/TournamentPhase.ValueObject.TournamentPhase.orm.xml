<doctrine-mapping>
    <entity name="App\Domain\TournamentPhase\ValueObject\TournamentPhase">
        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="updateTimestamps" />
            <lifecycle-callback type="preUpdate" method="updateTimestamps" />
        </lifecycle-callbacks>
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="name" type="string" length="100" />
        <many-to-one field="tournament" target-entity="App\Domain\Tournament\ValueObject\Tournament" inversed-by="phases">
            <join-column name="tournament_id" referenced-column-name="id" />
        </many-to-one>
        <one-to-many field="matches" target-entity="App\Domain\Match\ValueObject\Match" mapped-by="phase" />
        <field name="createdAt" type="datetime" />
        <field name="updatedAt" type="datetime" />
    </entity>
</doctrine-mapping>
